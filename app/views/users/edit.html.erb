<div align='center'>
<h3>Edit user account</h3>

<%= error_messages_for @user %>

<%= form_for(@user, :action => resource(@user)) do %>
	<table>
	<tr><td>E-mail</td><td><%= text_field :email %></td></tr>
	<tr><td>Name</td><td><%= text_field :name %></td></tr>
	<tr><td>New Password</td><td><%= password_field :password %></td></tr>
	<tr><td>New Password Confirmation</td><td><%= password_field :password_confirmation %></td></tr>
	<tr><td></td><td align='right'><%= submit "Update" %></td></tr>
	</table>
<% end =%>
</div>
