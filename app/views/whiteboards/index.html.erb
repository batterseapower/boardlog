<div align='center'>
<table cellspacing='6' cellpadding='10'>
<tr>
<% if session.user %>
<td valign='top'>
	<h3>My Whiteboards</h3>
	<%= link_to "<b>Create new whiteboard</b>", resource(:whiteboards, :new) %><br /><br />
	<%= partial "shared/whiteboard_details", :with => session.user.owned_whiteboards, :as => :whiteboard %>
	<% if @requested_whiteboards!=[] %>
		<br /><br />
		<h3>Ownership-requested whiteboards</h3>
		<%= partial "shared/whiteboard", :with => @requested_whiteboards, :as => :whiteboard %>
	<% end %>
</td>
<td valign='top' style='border-left:solid 1px #ccc;'>
</td>
<% end %>
<td valign='top'>
	<h3>Public Whiteboards</h3>
	<ul>
		<%= partial "shared/whiteboard", :with => @whiteboards, :as => :whiteboard %>
	</ul>
</td>
</tr>
</table>
</div>
